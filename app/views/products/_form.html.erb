<%= simple_form_for @product do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.input :name %>
  </div>

  <div class="field">
    <%= form.input :description, as: :text %>
  </div>

  <div class="field">
    <%= form.association :product_kind, collection: ProductKind.all.order(:name), prompt: 'Tipo de Producto' %>
  </div>

  <div class="field">
    <%= form.association :unit_measurement, collection: UnitMeasurement.all.order(:unit_name), label_method: :unit_name, prompt: 'Unidad' %>
  </div>

  <div class="field">
    <%= form.label :current_price %>
    <%= form.number_field :current_price %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

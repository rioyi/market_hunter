<p id="notice"><%= notice %></p>

<h1>Unit Measurements</h1>

<table>
  <thead>
    <tr>
      <th>Unit name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @unit_measurements.each do |unit_measurement| %>
      <tr>
        <td><%= unit_measurement.unit_name %></td>
        <td><%= unit_measurement.description %></td>
        <td><%= link_to 'Show', unit_measurement %></td>
        <td><%= link_to 'Edit', edit_unit_measurement_path(unit_measurement) %></td>
        <td><%= link_to 'Destroy', unit_measurement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

